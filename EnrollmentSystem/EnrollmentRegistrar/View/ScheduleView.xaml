                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Margin="0,427,12,10" Width="75" IsCancel="True" Click="btnClose_Click"/>

    </Grid>
</Window>
