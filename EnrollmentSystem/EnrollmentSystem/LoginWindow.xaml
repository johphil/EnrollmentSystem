<Window x:Class="EnrollmentSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnrollmentSystem"
        mc:Ignorable="d"
        Title="Login" Height="183.051" Width="252.542">
    <Grid>
        <WrapPanel Height="132" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="225">
            <Label Content="Account" Width="70"/>
            <TextBox x:Name="tbAccount" Text="{Binding Path=Account}"  Height="22" TextWrapping="Wrap" Width="120" TabIndex="0"/>
            <Label Content="Password" Width="70"/>
            <PasswordBox x:Name="tbPassword" Width="120" Height="22"/>
            <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="190" Margin="0,10,0,0" TabIndex="2" IsDefault="True" Click="btnLogin_Click"/>
        </WrapPanel>
    </Grid>
</Window>
